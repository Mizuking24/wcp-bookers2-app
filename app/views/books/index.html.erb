<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %><br/>
<%= f.submit "create book" %><br/>
<% end %>

<h1>Books</h1>
<table>

  <tr>
    <th>Title</th>
    <th></th>
    <th>Opinion</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= link_to book.title, book_path(book) %></td>
    <td></td>
    <td><%= book.body %></td>
  </tr>
<% end %>

</table>